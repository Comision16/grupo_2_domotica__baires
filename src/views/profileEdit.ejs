<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

  <body class="profile__body">
    <!-- Header -->
    <%- include('./partials/header') %>

      <main class="main__container">
        <section class="sectorA">
          <article class="container__avatar">
            <div>
              <img src="/imagenes/imageUsers/<%= user.avatar %> " alt="">
            </div>
           
          </article>
  
          <form class="container_info_profile" action="/users/profileEdit?_method=PUT"  enctype="multipart/form-data" method="POST">
            
            <figure>
              <h5>Selecicona una imagen:</h5>
              <br>
               <input type="file" name="avatar" >
             </figure>
            
            <div>
              <label for="">Nombre:</label>
              <input type="text" name="name"  value="<%= user.name %>" id="name" />
              <p><%= locals.errors && errors.name ? errors.name.msg : null%></p>
              <p id="errorNombre">  <%= locals.errors && errors.name ? errors.name.msg : null %> </p>
                        
            </div>
            <div>
              <label for="">Apellido:</label>
              <input type="text" name="surname"  value="<%= user.surname %>" id="surname" />
              <p><%= locals.errors && errors.surname ? errors.surname.msg : null%></p>
              <p id="errorApellido">  <%= locals.errors && errors.name ? errors.name.msg : null %> </p>
            </div>
            <div>
              <label for="">Email:</label>
              <input type="email" name="email"   value="<%= user.email %>" id="email" />
              <p><%= locals.errors && errors.email ? errors.email.msg : null%></p>
              <p id="errorEmail">  <%= locals.errors && errors.name ? errors.name.msg : null %> </p>
            </div>
            <div>
              <label for="">Telefono:</label>
              <input type="number" name="tel"  value="<%= user.tel %>" id="tel">
              <p><%= locals.errors && errors.tel ? errors.tel.msg : null%></p>
              <p id="errortel">  <%= locals.errors && errors.name ? errors.name.msg : null %> </p>
            </div>
            <div>
              <button type="submit" class="botooon"><h4>Aceptar Cambios</h4></button>

            </div>
          </form>
        </section>
        


