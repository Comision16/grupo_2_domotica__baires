<html lang="en">

    <%- include('./partials/head') %>

<body class="body__detalle">

    <%- include('./partials/header') %>
    
    <main class="detalle_main">
        <h4 class="unoo">Inicio> <%= product.category_id %> > Producto></h4>
        <article class="detalle_main_article">
            <section class="detalle_main_section_imagenPrincipal">
                <div class="detalle_main_section_div-imagen">
                    <a href=""><img src="/imagenes/imageProducts/<%= product.images[0].name %>" alt=""></a>
                </div>
            </section>
            <h6 class="main_h6">  1 / 5 >   </h6>
            
            <section class="detalle_main_section_imagenSecundaria">
                <div class="detalle_main_section_imagenSecundaria_div">
                    <img src="/imagenes/imageProducts/default-image.png" alt="">
